{
  "name": "Live Aggregator",
  "version": "1.0",
  "description": "Organizes all the live streamers you follow into one place.",
  "permissions": [
    "activeTab",
    "cookies",
    "declarativeContent",
    "storage",
    "*://*.youtube.com/",
    "*://*.twitch.tv/",
    "*://*.mixer.com/"
  ],
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/live_aggregator.png"
    }
  },
  "icons": {
    "128": "images/live_aggregator.png"
  },
  "manifest_version": 2
}
